<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".comic.view.SearchComicFragment"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_172dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/screens"
        android:contentDescription="@string/screen" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/comic"
        android:textColor="@color/mainTitles"
        android:textSize="@dimen/dimen_22sp"
        android:gravity="right"
        android:layout_margin="@dimen/dimen_40dp"
        android:textStyle="bold"/>

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainTitles"
        android:layout_marginStart="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_90dp"
        android:layout_marginEnd="@dimen/dimen_40dp" />


</FrameLayout>